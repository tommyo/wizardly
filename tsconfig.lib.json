{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "src/**/*.ts",
        "src/**/*.vue"
    ],
    "exclude": [
        "src/**/__tests__/*",
        "src/**/*.spec.ts",
        "src/main.ts",
        "src/App.vue",
        "src/router/**/*",
        "src/stores/counter.ts",
        "src/views/**/*"
    ],
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    }
}